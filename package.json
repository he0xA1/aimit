{
  "name": "aimit",
  "version": "1.0.0",
  "description": "Generate intelligent Git commit messages automatically using local AI models",
  "main": "index.js",
  "keywords": [
    "cli",
    "ai",
    "git",
    "llm"
  ],
  "author": "he0xA1",
  "license": "MIT",
  "type": "module",
  "bin": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/he0xA1/aimit"
  },
  "bugs": {
    "url": "https://github.com/he0xA1/aimit/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:watch": "node esbuild.config.mjs watch",
    "build:prod": "NODE_ENV=production node esbuild.config.mjs",
    "build:types": "tsc --emitDeclarationOnly",
    "build:all": "npm run build && npm run build:types",
    "watch": "tsx --watch src/index.ts",
    "format": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "node-llama-cpp": "^3.14.5",
    "prompts": "^2.4.2",
    "zod": "^4.1.12"
  }
}
